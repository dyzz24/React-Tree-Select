.container {
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
    margin: 8px 0 0 14px;
}

.title {
    display: flex;
    align-items: center;
    width: 100%;
    position: relative;

    &:before {
        content: '';
        width: 100%;
        height: 1px;
        background-color: #747bff;
        right: calc(100% + 4px);
        position: absolute;
    }
}

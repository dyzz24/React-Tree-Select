.label {
    display: inline-flex;
    align-items: center;
    cursor: pointer;
    user-select: none;


    input {
        margin: 0 4px 0 6px;
    }

    &.active {
        background-color: rgba(121, 255, 100, 0.2);
        border-radius: 2px;
    }

    &.target {
        background-color: rgba(255, 100, 201, 0.2);
        font-weight: bold;
        border-radius: 2px;
    }

    &.hasChildren {
        color: #747bff;
    }
}
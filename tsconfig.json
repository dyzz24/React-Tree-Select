{
  "compilerOptions": {
    "paths": {
      "@utils/*": [
        "./src/utils/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@reducer/*": [
        "./src/reducer/*"
      ]
    },
    "module": "esnext",
    "allowJs": false,
    "target": "ES2015",
    "moduleResolution": "Node",
    "useDefineForClassFields": true,
    "skipDefaultLibCheck": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src",
    "vite.config.ts",
    ".eslintrc.cjs",
    "postcss.config.cjs"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
